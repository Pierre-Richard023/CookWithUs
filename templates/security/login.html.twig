{% extends 'base.html.twig' %}

{% block title %}
{{ parent()  }} - S 'identifier
{% endblock %}

{% block body %}

    <div class="flex items-center justify-center px-4 py-4">
        <div class="bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden" style="max-width:1000px">
            <div class="md:flex w-full">
                <div class="hidden md:block w-1/2 py-10 px-10">
                    <img src="{{ asset('images/recipes.svg') }}" alt="recipes logo ">
                </div>
                <div class="w-full md:w-1/2 py-10 px-5 md:px-10">
                    <h2 class="text-2xl font-semibold text-gray-700 text-center">S'identifier</h2>
                    <form method="post">

                        {% if error %}
                            <div class="font-regular relative mb-4 block w-full rounded-lg bg-danger p-4 text-base leading-5 text-white opacity-100">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="mt-4">
                            <label class="block text-gray-700 text-sm font-bold mb-2">Adresse e-mail</label>
                            <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none"
                                   type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   autocomplete="email" required autofocus
                            />
                        </div>
                        <div class="mt-4">
                            <div class="flex justify-between">
                                <label class="block text-gray-700 text-sm font-bold mb-2">Mot de passe</label>
                                <a href="{{ path('forgot.password.request') }}" class="text-xs text-gray-500">Mot de passe oubli√©?</a>
                            </div>
                            <input class="bg-gray-200 text-gray-700 focus:outline-none focus:shadow-outline border border-gray-300 rounded py-2 px-4 block w-full appearance-none"
                                   type="password" name="password" id="inputPassword" autocomplete="current-password"
                                   required
                            />
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        />

                        <div class="mt-8">
                            <button type="submit"
                                    class="bg-primary text-white font-bold py-2 px-4 w-full rounded hover:bg-primary">
                                Connexion
                            </button>
                        </div>
                    </form>
                    <div class="mt-4 flex items-center justify-between">
                        <span class="border-b w-1/5 md:w-1/4"></span>
                        <a href="{{ path('register') }}" class="text-xs text-gray-500 uppercase">ou inscrivez-vous</a>
                        <span class="border-b w-1/5 md:w-1/4"></span>
                    </div>
                </div>


            </div>
        </div>
    </div>





{% endblock %}
