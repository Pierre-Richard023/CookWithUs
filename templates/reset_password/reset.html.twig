{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - Réinitialisez votre mot de passe
{% endblock %}

{% block body %}
    <div class="flex items-center justify-center px-4 py-4">
        <div class="bg-gray-100 text-gray-500 rounded-3xl shadow-xl w-full overflow-hidden" style="max-width:1000px">
            <div class="md:flex w-full">
                <div class="hidden md:block w-1/2 py-10 px-10">
                    <img src="{{ asset('images/recipes.svg') }}" alt="recipes logo" />

                </div>
                <div class="w-full md:w-1/2 py-10 px-5 md:px-10">

                    <h1 class="text-center p-4">Réinitialisez votre mot de passe</h1>

                    {{ form_start(resetForm) }}
                    <div class="grid grid-cols-6 gap-4 col-span-full lg:col-span-3">

                        <div class="col-span-full">
                            {{ form_row(resetForm.plainPassword) }}
                        </div>

                        <div class="col-span-full sm:col-span-6">
                            <button class="bg-primary w-full text-white px-8 py-3 font-semibold rounded-full">
                                Réinitialiser le mot de passe
                            </button>
                        </div>

                    </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>



{% endblock %}
